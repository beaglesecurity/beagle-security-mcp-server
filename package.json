{
  "name": "beagle-security-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Beagle Security API integration",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "docker:build": "docker build -t beagle-security-mcp-server .",
    "docker:run": "docker run -it --rm -e BEAGLE_SECURITY_API_TOKEN=$BEAGLE_SECURITY_API_TOKEN beagle-security-mcp-server",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "keywords": ["mcp", "beagle-security", "security", "api"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
